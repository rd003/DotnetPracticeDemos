@model IEnumerable<Person>
@{

}

<div class="row justify-content-center">
    <div class="col-lg-8 col-md-10">
        <div class="card card-gradient border-0 shadow-lg rounded-4">
            <div class="card-body p-5 text-center">
                <h1 class="display-6 fw-bold text-success mb-4">
                    Person List
                </h1>

                <div class="text-start mb-3">
                    <a href="/person/add" class="btn btn-info">+ Add more</a>
                </div>

                <table class="table table-striped table-hover shadow-sm rounded">
                    <thead>
                        <tr>
                            <th>John Name</th>
                            <th>Last Name</th>
                            <th>Actions</th>
                        </tr>
                    </thead>

                    <tbody>
                        @foreach (var person in Model)
                        {
                            <tr>
                                <td>@person.FirstName</td>
                                <td>@person.LastName</td>
                                <td>
                                    <a href="/person/edit?id=@person.Id" class="btn btn-primary">
                                        <i class="fas fa-edit"></i>
                                    </a>

                                    <a href="/person/delete?id=@person.Id" class="btn btn-danger" onclick="return confirm('Are you sure to delete?')">
                                        <i class="fa fa-trash" aria-hidden="true"></i>
                                    </a>
                                </td>
                            </tr>
                        }

                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>