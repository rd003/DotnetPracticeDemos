@using System.Security.Principal

@if (User.Identity?.IsAuthenticated==true)
{
    
        var displayName = User.FindFirst("name")?.Value ?? 
                         User.FindFirst("given_name")?.Value ?? 
                         User.FindFirst("emails")?.Value?.Split('@')[0] ?? 
                         "User";
        var email = User.FindFirst("emails")?.Value;
    
    <ul class="navbar-nav">
        <li class="nav-item dropdown">
            <a class="nav-link dropdown-toggle text-dark" href="#" role="button" data-bs-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                Hello @displayName!
            </a>
            <div class="dropdown-menu dropdown-menu-end">
                <h6 class="dropdown-header">@email</h6>
                <div class="dropdown-divider"></div>
                <a class="dropdown-item" asp-controller="Profile" asp-action="Me">Profile</a>
                <a class="dropdown-item" asp-controller="Profile" asp-action="Edit">Edit</a>
                <a class="dropdown-item" asp-area="MicrosoftIdentity" asp-controller="Account" asp-action="SignOut">Sign out</a>
            </div>
        </li>
    </ul>
}
else
{
    <ul class="navbar-nav">
        <li class="nav-item">
            <a class="nav-link text-dark" asp-area="MicrosoftIdentity" asp-controller="Account" asp-action="SignIn">Sign in</a>
        </li>
    </ul>
}